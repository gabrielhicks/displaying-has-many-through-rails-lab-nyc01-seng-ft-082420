<h1><%= @doctor.name %></h1><br>
<h3><%= @doctor.department %></h3>

<% @doctor.appointments.each do |appointment| %>
    <% @doctor_patient = @doctor.patients.find(appointment.patient_id) %>
    <%= link_to @doctor_patient.name, patient_path(@doctor_patient) %> - <%=link_to appointment.appointment_datetime.strftime("%B %e, %Y at %H:%M"), appointment_path(appointment)%>
<% end %>